</head>
   <br/><br/><br/><br/>
  <body class="login-img3-body">

    <div class="container">

         <div class="row">
             <div class="col col-md-4 col-md-offset-4">
                  <br/><br/><br/><br/><br/><br/>
               <%= form_for :personel, :url => {:action => 'authenticate'} do |f| %>
       
        <div class="login-wrap" style="background-color: #fff; border-radius: 5px;">
            <p id="notice" style="color: #FF0000;"><%= notice %></p>
            <p class="login-img col col-md-offset-4"><i class="icon_lock_alt"></i></p>
            <div class="input-group">
              <span class="input-group-addon"><i class="icon_profile"></i></span>              
              <%= f.text_field :username, class: 'form-control round-input'%>
            </div>
              <br/>
            <div class="input-group">
                <span class="input-group-addon"><i class="icon_key_alt"></i></span>
                <%= f.password_field  :password, class: 'form-control round-input'%>
            </div>
            <label class="checkbox">
                <input type="checkbox" value="remember-me"> Remember me
                <span class="pull-right"> <a href="#"> Forgot Password?</a>  <a href="#">Sign up</a></span>
            </label>
            <%= f.submit 'Login', class: 'btn btn-primary' %>
            <%= f.submit 'Cancel', class: 'btn grey-bg pull-right', redirect_to: ('/facilities/index') %>
        </div>
      <% end %>
                 
             </div>
         </div>

      

    </div>


  </body>
</html>
