

<!--main content start hello-->
<section id="main-content">
          <section class="wrapper">            
              <!--overview start-->

				
			  
<div class="container">

<div class="row">
	<div class="col-lg-12">
	<h3 class="page-header"><i class="fa fa-th-list style="color:#000000;"></i>List of utilities for a Health Facility </h3>
					
		</div>
	</div>
     
    <div class="row">
    	<div class="col col-md-10">
    	
	<p id="notice"><%= notice %></p>
	<% if @utility.blank? %>
	  <p> There are no utilities currently in the system</p>
	 <% else %>
      	<p>These are the utilities currently in the system </p>
	 <% end %>
	
   

	<table class="table table-striped table-advance table-hover">
		<th>utility name </th>
		<th>utility provider</th>
		<th>View</th>
		<th>Edit</th>
		<th colspan="3"><i class="fa fa-cogs"></i> &nbspAction</th>
	
	<% @utility.each do |u| %> 
		<tr>
		<td><%= u['name'] %></td>
		<td><%= u['provider'] %></td>
		<td><i class="fa fa-eye" style="color:#2c3830;border-radius: 2px; "> &nbsp;<%= link_to 'view',{:action => 'show',:id =>u['id']} %></i></td>
		<td><i class="fa fa-edit" style="color:#2edb67;"> &nbsp <%= link_to 'edit',{:action => 'edit',:id => u['id']} %></i></td>
		<td><i class="fa fa-trash-o"> &nbsp; <%= link_to 'Delete', {:action =>'delete',:id => u['id']}, data: {confirm: "Are you sure you want to delete this facility"} %></i></td></i></td>
		</tr>
	    </tr>
	 <% end %>
	</table>
	<br/>
	<br/>
	<br/>
	<br/>
	
	
    <br/>
    <br/>
	<div class="col col-md-2 btn btn-success">
      <a href="/facilities/index">back</a>   
       </div>
</div>
</div>
</section>
