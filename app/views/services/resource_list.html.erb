

<!--main content start hello-->
<section id="main-content">
          <section class="wrapper">            
              <!--overview start-->

				
			  
<div class="container">

<div class="row">
	<div class="col-lg-12">
	<h3 class="page-header"><i class="fa fa-desktop" style="color:#2edb67;"></i>List of  Health Facilities resources in Malawi</h3>
					
		</div>
	</div>
     
    <div class="row">
    	<div class="col col-md-10">
    	
	<p id="notice"><%= notice %></p>
	<% if @resources.blank? %>
	  <p> There are no services currently in the system</p>
	 <% else %>
      	<p>These are the services currently in the system which offer </p>
	 <% end %>
	
   

	<table class="table table-striped table-advance table-hover">
		<th>resource name </th>
		<th>View</th>
		<th>Edit</th>
		<th colspan="3"><i class="fa fa-cogs"></i> &nbspAction</th>

	
	<% @resource.each do |r| %>
		<tr>
		<td><%= r['name'] %></td>
		
		<td><i class="fa fa-eye" style="color:#2c3830;border-radius: 2px; "> &nbsp;<%= link_to 'view',{:action => 'show',:id =>r['id']} %></i></td>
		<td><i class="fa fa-edit" style="color:#2edb67;"> &nbsp <%= link_to 'edit',{:action => 'edit',:id => r['id']} %></i></td>
		<td><i class="fa fa-trash-o"> &nbsp; <%= link_to 'Delete', {:action =>'delete',:id => r['id']}, data: {confirm: "Are you sure you want to delete this resource"} %></i></td>
		

		</tr>
	    </tr>
	 <% end %>
	</table>

    </div>
    <br/>
    <br/>
	<div class="col col-md-1 btn btn-success">
      <a href="/facilities/index">back</a>   
       </div>
</div>
</div>
</section>
      </section>