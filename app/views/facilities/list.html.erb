






<!--main content start hello-->
<section id="main-content">
          <section class="wrapper">            
              <!--overview start-->

				
			  
<div class="container">

<div class="row">

	<h4 class="page-header facility-list" style="align-content: left;"><i class="fa fa-hospital-o" style="color:#2edb67"></i><strong>List of Health Facilities in Malawi</strong></h4>
					
	
	</div>
     
    <div class="row facility-list">
    	<div class="col col-md-12">
    	
	<p id="notice"><%= notice %></p>
	<% if @facilities.blank? %>
	 <%	if @specific_name.blank? %>
	  <p> There are no facilities currently in the system</p>
	 <% else %>
      	<p>There are no facilities currently in the system which offer <%= @specific_name %> services</p>
	 <% end %>
	
    <% else %>
	<%	if @specific_name.blank? %>
	<p>This is the list of current facilities in the system</p>
	<% else %>
	<p>This is the list of current facilities in the system which offer <%= @specific_name %> services</p>
	<% end %>
   

	<table class="table table-advance table-hover">
		<th>facility id </th>
		<th>facility name </th>
		<th>description </th>
		<th>cell location </th>
		<th colspan="3"><i class="fa fa-cogs"></i> &nbsp;Action</th>
		
		
	<% end %>
	
	
	<% @facilities.each do |f| %>
	
		<tr>
		<td><%= f['facility_id'] %></td>
		<td><%= f['name'] %></td>
		<td><%= f['description'] %></td>
		<td><%= f['cell_location'] %></td>
		<td><a class="btn btn-primary" href="#"><i class="fa fa-eye"> &nbsp;<%= link_to 'View', {:action => 'show', :facility_id => f['facility_id']} %></i></a></td>
		<% if session[:login_status] == 'logged in' %>
		<td><a class="btn btn-success" href="#"><i class="fa fa-edit"> &nbsp;<%= link_to 'Edit', {:action => 'edit', :facility_id => f['facility_id']} %></i></a></td>
		<td><a class="btn btn-danger" href="#"><i class="icon_close_alt2"></i>&nbsp;<%= link_to 'Delete', {:action => 'delete', :facility_id => f['facility_id']}, data: {confirm: "Are you sure you want to delete this facility"} %></i></a></td>
		</tr>

		<% else %>
		  </tr>
		<% end %>
			
	<% end %>
	</table>
	<br/>
	<br/>
   
    <% unless @facilities.empty? %>
  <%= will_paginate @facilities %>
<% end %>
    
    <br/>
	<div class="col col-md-1 btn btn-success">
      <a href="/facilities/index" style="color:#fff;">back</a>   
       </div>
</div>
</div>
</section>
      </section>