

<!--main content start hello-->
<section id="main-content">
          <section class="wrapper">            
              <!--overview start-->

				
			  
<div class="container">

<div class="row">
	<div class="col-lg-12">
	<h4 class="page-header"><i class="fa fa-hospital-o"></i><strong>List of Health Facilities in Malawi</strong></h4>
					
		</div>
	</div>
     
    <div class="row">
    	<div class="col col-md-10">
    	
	<p id="notice"><%= notice %></p>
	<% if @facilities.blank? %>
	 <%	if @specific_name.blank? %>
	  <p> There are no facilities currently in the system</p>
	 <% else %>
      	<p>There are no facilities currently in the system which offer <%= @specific_name %> services</p>
	 <% end %>
	
    <% else %>
	<%	if @specific_name.blank? %>
	<p>This is the list of current facilities in the system</p>
	<% else %>
	<p>This is the list of current facilities in the system which offer <%= @specific_name %> services</p>
	<% end %>
   

	<table class="table table-advance table-hover">
		<th>facility id </th>
		<th>facility name </th>
		<th>description </th>
		<th>cell location </th>
		<th colspan="3"><i class="fa fa-cogs"></i> &nbsp;Action</th>
		
		
	<% end %>
	
	
	<% @facilities.each do |f| %>
	
		<tr>
		<td><%= f['facility_id'] %></td>
		<td><%= f['name'] %></td>
		<td><%= f['description'] %></td>
		<td><%= f['cell_location'] %></td>
		<td><i class="fa fa-eye"> &nbsp;<%= link_to 'View', {:action => 'show', :facility_id => f['facility_id']} %></i></td>
		<% if session[:login_status] == 'logged in' %>
		<td><i class="fa fa-edit" style="color:#2edb67;"> &nbsp;<%= link_to 'Edit', {:action => 'edit', :facility_id => f['facility_id']} %></i></td>
		<td><i class="fa fa-trash-o"> &nbsp;<%= link_to 'Delete', {:action => 'delete', :facility_id => f['facility_id']}, data: {confirm: "Are you sure you want to delete this facility"} %></i></td>
		</tr>

		<% else %>
		  </tr>
		<% end %>
			
	<% end %>
	</table>
	<br/>
	<br/>
	<br/>
	<br/>
	
	 <div class="panel-body">
           <div class="row">
          
                  <div class="btn-group btn-group-justified">
                    
                              <a class="btn btn-success" href="/facilities/search_by_partner">By P.Organization</a>
                              <a class="btn btn-primary" href="/facilities/searchbydistrict">By District</a>
                              <a class="btn btn-success" href="/facilities/search_by_zone">By Zone</a>
                              <a class="btn btn-danger" href="#">Middle</a>
                               <a class="btn btn-primary" href="#">Right</a>
                                
                              </div>
                 
                </div>           
                      
            </div>		  
    </div>
    <br/>
    <br/>
	<div class="col col-md-1 btn btn-success">
      <a href="/facilities/index">back</a>   
       </div>
</div>
</div>
</section>
      </section>